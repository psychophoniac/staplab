function isTarget(tid){
	return pid() == target()
}

function log(proto,func,sa,sp,da,dp,sz){
	if ( isTarget(pid()) ){
		printf("%s.%s source:%s:%d dest:%s:%d size:%d\n",
			proto,
			func,
			sa,	// source addr
			sp,	// source port
			da,	// dest addr
			dp,	// dest port
			sz	// bytes transmitted
		)
	}
}

probe netfilter.ip.local_out {
	log(
		sock_prot_num2str(protocol),
		"send",
		saddr,
		sport,
		daddr,
		dport,
		length
	)
}
probe netfilter.ip.local_in {
	log(
		sock_prot_num2str(protocol),
		"recv",
		saddr,
		sport,
		daddr,
		dport,
		length
	)
}
